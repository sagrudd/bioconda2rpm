# syntax=docker/dockerfile:1.7
ARG TARGETPLATFORM=linux/amd64
FROM --platform=$TARGETPLATFORM almalinux:10.1

ARG TARGETPLATFORM
ARG TARGETARCH

LABEL org.opencontainers.image.title="bioconda2rpm build image (AlmaLinux 10.1)" \
      org.opencontainers.image.description="Container for SPEC -> SRPM -> RPM workflows used by bioconda2rpm" \
      org.opencontainers.image.vendor="Phoreus" \
      org.opencontainers.image.base.name="almalinux:10.1"

ENV LANG=C.UTF-8 \
    LC_ALL=C.UTF-8 \
    TERM=xterm-256color

RUN set -eux; \
    printf '%s\n' \
      '[baseos]' \
      'name=AlmaLinux 10.1 - BaseOS' \
      'baseurl=https://repo.almalinux.org/almalinux/10.1/BaseOS/$basearch/os/' \
      'enabled=1' \
      'gpgcheck=1' \
      'gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-AlmaLinux-10' \
      '' \
      '[appstream]' \
      'name=AlmaLinux 10.1 - AppStream' \
      'baseurl=https://repo.almalinux.org/almalinux/10.1/AppStream/$basearch/os/' \
      'enabled=1' \
      'gpgcheck=1' \
      'gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-AlmaLinux-10' \
      '' \
      '[crb]' \
      'name=AlmaLinux 10.1 - CRB' \
      'baseurl=https://repo.almalinux.org/almalinux/10.1/CRB/$basearch/os/' \
      'enabled=1' \
      'gpgcheck=1' \
      'gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-AlmaLinux-10' \
      > /etc/yum.repos.d/bioconda2rpm-almalinux-10.1.repo; \
    rm -f /etc/yum.repos.d/almalinux*.repo; \
    dnf -y install dnf-plugins-core; \
    dnf config-manager --set-enabled crb || true; \
    dnf -y upgrade --refresh; \
    dnf -y install --setopt=install_weak_deps=False \
      bash \
      ca-certificates \
      diffutils \
      findutils \
      file \
      gawk \
      gcc \
      gcc-c++ \
      git \
      glibc-langpack-en \
      grep \
      gzip \
      make \
      patch \
      pkgconfig \
      python3 \
      python3-pip \
      python3-setuptools \
      python3-wheel \
      redhat-rpm-config \
      rpm-build \
      rpmdevtools \
      sed \
      shadow-utils \
      tar \
      unzip \
      util-linux \
      wget \
      which \
      xz \
      zip; \
    dnf clean all; \
    rm -rf /var/cache/dnf

RUN useradd --create-home --uid 1000 builder; \
    mkdir -p /work /rpmbuild; \
    chown -R builder:builder /work /rpmbuild

WORKDIR /work
USER builder

CMD ["/bin/bash"]
